<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:paddingHorizontal="15dp">

        <androidx.cardview.widget.CardView
            android:layout_width="409dp"
            android:layout_height="170dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="15dp"
            app:cardBackgroundColor="#47C4C4C4"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:textSize="12sp"
                android:layout_marginTop="30dp"
                android:text="Name:" />

            <ImageView
                android:id="@+id/pet_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5C5C5C"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:text="GoChip Digital Identity" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="50dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="50dp"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:text="Breed:" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="50dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="70dp"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:text="Type:" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="50dp"
                android:layout_marginLeft="140dp"
                android:textSize="12sp"
                android:layout_marginTop="90dp"
                android:layout_height="wrap_content"
                android:text="Weight:" />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="50dp"
                android:layout_marginLeft="140dp"
                android:textSize="12sp"
                android:layout_marginTop="110dp"
                android:layout_height="wrap_content"
                android:text="Color:" />
            <TextView
                android:id="@+id/test_person_pet"
                android:layout_width="130dp"
                android:layout_marginLeft="185dp"
                android:textSize="12sp"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:text="name" />
            <TextView
                android:id="@+id/pet_breed_txt"
                android:layout_width="130dp"
                android:layout_marginLeft="185dp"
                android:textSize="12sp"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content"
                android:text="breed" />
            <TextView
                android:id="@+id/pet_color_txt"
                android:layout_width="130dp"
                android:layout_marginLeft="185dp"
                android:textSize="12sp"
                android:layout_marginTop="70dp"
                android:layout_height="wrap_content"
                android:text="color" />
            <TextView
                android:id="@+id/pet_weight_txt"
                android:layout_width="130dp"
                android:layout_marginLeft="185dp"
                android:textSize="12sp"
                android:layout_marginTop="90dp"
                android:layout_height="wrap_content"
                android:text="weight" />
            <TextView
                android:id="@+id/pet_type_txt"
                android:layout_width="130dp"
                android:layout_marginLeft="185dp"
                android:textSize="12sp"
                android:layout_marginTop="110dp"
                android:layout_height="wrap_content"
                android:text="breed" />

            <View
                android:layout_width="370dp"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="135dp"
                android:background="#C4C4C4"/>

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/qrscan"/>
            <TextView
                android:layout_width="136dp"
                android:layout_height="14dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="145dp"
                android:textSize="12sp"
                android:text="ISO: 98373876983793"/>
            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/security"
                android:layout_marginLeft="315dp"
                android:layout_marginTop="142dp"/>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>