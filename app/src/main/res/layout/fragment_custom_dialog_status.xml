<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_bold"
        android:paddingLeft="25dp"
        android:text="Choose profile"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.djumabaevs.gochipapp.util.MSPButton
        android:id="@+id/button_owner"
        style="@style/button_text"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="47dp"
        android:background="@drawable/green_button"
        android:gravity="center_vertical"
        android:text="Owner"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/button_vet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="parent" />


        <com.djumabaevs.gochipapp.util.MSPButton
            android:id="@+id/button_vet"
            style="@style/button_text"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:background="@drawable/orange_button"
            android:gravity="center_vertical"
            android:text="Vet"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.42"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_owner"
            app:layout_constraintBottom_toTopOf="@+id/button_cancel"/>

