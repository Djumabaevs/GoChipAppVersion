<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="325dp"
        android:layout_height="200dp"
        android:background="#25252E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/notosans_bold"
            android:paddingLeft="25dp"
            android:text="Choose profile"
            android:textColor="#ffffff"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/button_work"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_work"
            style="@style/button_text"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="47dp"
            android:background="@drawable/green_button"
            android:gravity="center_vertical"
            android:text="Owner"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@+id/button_dinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.409"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_status" />


        <Button
            android:id="@+id/button_dinner"
            style="@style/button_text"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:background="@drawable/orange_button"
            android:gravity="center_vertical"
            android:text="Vet"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.42"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_work"
            app:layout_constraintBottom_toTopOf="@+id/button_ok"/>

        <Button
            android:id="@+id/button_ok"
            style="@style/button_text"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="59dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button"
            android:text="OK"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_cancel"
            app:layout_constraintTop_toBottomOf="@+id/button_dinner" />

        <Button
            android:id="@+id/button_cancel"
            style="@style/button_text"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/cancel_button"
            android:text="Cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_ok"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_dinner" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>